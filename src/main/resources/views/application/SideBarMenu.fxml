            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="othelloPlayButton" disable="true" layoutX="20.0" layoutY="134.0" mnemonicParsing="false" prefHeight="41.0" onAction="#loadGameScene" prefWidth="250.0" text="Othello">
