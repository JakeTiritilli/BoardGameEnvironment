            <Font name="System Bold" size="18.0" />
         </font>
      </Button>
      <Button fx:id="memoryPlayButton" disable="true" layoutX="20.0" layoutY="189.0" mnemonicParsing="false" onAction="#loadGameScene" prefHeight="41.0" prefWidth="250.0" text="Memory">
